@model MovieCreateVM
@{
    ViewBag.Title = "Create";
}

<form asp-controller="Movies" asp-action="Create" enctype="multipart/form-data">
    <h2>Add movie</h2>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input style="width: 200px;" class="form-control" asp-for="Title" />
        <span style="color:red;" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="About"></label>
        <textarea style="width: 200px;" class="form-control" asp-for="About"></textarea>
        <span style="color:red;" asp-validation-for="About"></span>
    </div>

    <div class="form-group">
        <label asp-for="Length"></label>
        <input style="width: 200px;" class="form-control" asp-for="Length" />
        <span style="color:red;" asp-validation-for="Length"></span>

    </div>
    <div class="form-group">
        <label asp-for="Genre"></label>
        <select style="width: 200px;" class="form-control" id="Genre" name="Genre">
            <option value=""> - Please select a genre - </option>
            <option value="Action"> Action </option>
            <option value="Comedy"> Comedy </option>
            <option value="Drama"> Drama</option>
            <option value="Kids"> Kids</option>
            <option value="Thriller"> Thriller</option>
            <option value="Horror"> Horror</option>
            <option value="Documentary"> Documentary</option>
            <option value="Adventure"> Adventure</option>
        </select>
        <span style="color:red;" asp-validation-for="Genre"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" />
        <span style="color:red;" asp-validation-for="Image"></span>
    </div>

    <div class="form-group">
        <label asp-for="Trailer"></label><span data-toggle="modal" data-target="#HowToAddTrailer" class="glyphicon glyphicon-question-sign"></span>
        <input style="width: 200px;" class="form-control" asp-for="Trailer" />
        <span style="color:red;" asp-validation-for="Trailer"></span>

    </div>
    <div class="btn-group">
        <button type="submit" class="btn btn-default" value="Add movie">Add movie</button>
    </div>
</form>


<div class="container">

    <div class="modal fade" id="HowToAddTrailer" role="dialog">
        <div class="modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <img src="~/img/HowToTrailer.png" alt="Image error" />
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{

    <script>
        $(document).ready(function () {
            $('[data-toggle="popover"]').popover();
        });
    </script>
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.0.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}